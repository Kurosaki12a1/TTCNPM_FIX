<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bku.picshub">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".account.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainScreenActivity"
            android:label="Main Screen"/>
        <activity android:name=".MainActivity"/>
        <activity android:name=".toplike.TopLikeActivity"/>
        <activity android:name=".viewimageprofile.DisplayImagesActivity"/>
        <activity
            android:name=".account.AccountSettingsActivity"
            android:label="@string/title_activity_profile" />
        <activity
            android:name=".account.SignupActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".account.ResetPasswordActivity"
            android:label="@string/title_activity_reset_password" />
        <activity
            android:name=".ViewSelfProfile"
            android:label="View Self Profile" />
        <activity
            android:name=".EditProfileActivity"
            android:label="Edit Profile" />
        <activity
            android:name=".post.UploadPostActivity"
            android:label="Upload Post" />
        <activity
            android:name=".post.ViewPostActivity"
            android:label="View Post" />
        <activity android:name=".likedpost.LikedThisPostPopUp"
            android:theme="@style/AppTheme.LikedPopUp"/>

        <activity android:name=".search.SearchActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".ViewProfile"
            android:theme="@style/AppTheme"/>
        <activity android:name=".follow.FollowerPopUp"
            android:theme="@style/AppTheme.LikedPopUp"/>
        <activity android:name=".follow.FollowingPopUp"
            android:theme="@style/AppTheme.LikedPopUp"/>
    </application>

</manifest>