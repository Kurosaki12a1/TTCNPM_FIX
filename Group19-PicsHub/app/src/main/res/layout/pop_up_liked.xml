<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/avatar_user_liked_post"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:srcCompat="@drawable/black_border"
        android:scaleType="centerCrop"
        />

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/avatar_user_liked_post"
        android:layout_toRightOf="@+id/avatar_user_liked_post"
        android:gravity="left|center"
        android:text="UserName"
        android:textSize="15sp"
        android:id="@+id/user_name_liked_post"/>

</RelativeLayout>