<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="60dp">

    <ImageView
        android:id="@+id/avatar_user_liked_post"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"

        app:srcCompat="@drawable/black_border" />

    <TextView
        android:id="@+id/usernamelikedphoto"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/avatar_user_liked_post"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@+id/avatar_user_liked_post"
        android:layout_toRightOf="@+id/avatar_user_liked_post"
        android:gravity="center_vertical"
        android:text="TextView" />
</RelativeLayout>